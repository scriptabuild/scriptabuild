{
	"extends": "eslint:recommended",
	"env": {
		"browser": true,
		"commonjs": true,
		"es6": true,
		"node": false
	},
	"parserOptions": {
		"ecmaVersion": 2017,
		"ecmaFeatures": {
			"experimentalObjectRestSpread": true,
			"jsx": true
		},
		"sourceType": "module"
	},
	"rules": {
        "no-irregular-whitespace": "off",
        "no-console": "off",
        "radix": "warn",
        "no-eval": "warn",
		"no-with": "warn"
	},
	"globals": {
		"React": true
	}
}